# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}

order += "spotify"
order += "net_rate"
order += "external_script"
order += "disk /"
#order += "wireless _first_"
#order += "ethernet _first_"
#order += "battery all"
order += "load"
order += "tztime local"

wireless _first_ {
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: down"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "%ip "
        format_down = "down"
}

battery all {
        format = "%status %percentage %remaining"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

load {
        format = "%1min "
}

net_rate {
		format = "{down}  {up} "
        format_value = "[\?min_length=7 {value:.1f}]"
        format_no_connection = "    0.0      0.0 "
		unit = "MB/s"
}

disk "/" {
        format = "%avail "
}

spotify {
	button_play_pause = 1
	button_previous = 4
	button_next = 5
	format = "{artist} - {title} "
	format_down = ""
	format_stopped = "{artist} - {title} "
	cache_timeout = 1
}

external_script {
    format = "{output} "
    cache_timeout = 1
    script_path = "~/.config/i3status/docker-status.sh"
}
